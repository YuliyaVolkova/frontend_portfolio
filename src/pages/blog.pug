extends ../assets/pug/layout/sub.layout.pug

block variables
	- var title = 'Блог о web разработке'
	- var pageClMod = 'blog'
	
block headerMode
	- var sectionName = 'c-header'
	- var socialId = ['vk', 'github', 'in']
	- var bgHeaderSvgId = 'blog_header'
	- var arrowId = 'arrow_down'

	+social(sectionName, socialId, '../assets/images/sprites/sprite.svg')
	+icon(bgHeaderSvgId, 'svg_header', '../assets/images/sprites/sprite.svg')
	.l-developer.l-developer_blog
		.c-developer
			.c-developer__img-wrap(style="background-image: url('../assets/images/content/photo.jpg'); background-repeat:no-repeat;")
				img.c-developer__img.visually-hidden(alt="", src=require('../assets/images/content/photo.jpg'))
			.c-developer__content
				.c-develop__header-blog
					+icon('dash', 'svg_develop', '../assets/images/sprites/sprite.svg')
