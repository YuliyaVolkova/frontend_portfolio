mixin icon(iconName, iconClass, url)
	svg(class=`${iconClass}`)
		use(xlink:href=`${url}#${iconName}`)
			title=iconName

mixin social(classPrefix, listSocial, urlIcon)
	ul(class=`${classPrefix}__social`)
		each val in listSocial
			li(class=`${classPrefix}__social-item`)
				a(class=`${classPrefix}__social-link`, href=`${val.url}`, target="_blank")
					+icon(val.iconID, 'svg-use', urlIcon)

mixin navMenu(navlist)
	ul.c-nav__list
		each val in navList
			li.c-nav__item
				a.c-nav__link(href=`${val.pageUrl}`)= val.title	

